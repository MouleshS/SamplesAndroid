<resources>

    <style name="MyTheme" parent="Base.MyTheme"></style>

    <style name="Base.MyTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="colorAccent">@color/accent</item>
        <item name="windowActionBar">false</item>
        <item name="windowActionBarOverlay">true</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowBackground">@color/background_material_light</item>
    </style>

    <style name="BezelImageView">
        <item name="biv_maskDrawable">@drawable/material_drawer_circle_mask</item>
        <item name="biv_drawCircularShadow">true</item>
        <item name="biv_selectorOnPress">@color/primary</item>
    </style>
</resources>
