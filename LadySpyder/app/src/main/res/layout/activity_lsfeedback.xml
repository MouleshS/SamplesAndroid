<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:fitsSystemWindows="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="vertical">


        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/spacing_20dp"
            android:background="@drawable/ic_logo" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="25dp"
            android:layout_marginRight="25dp"
            android:layout_marginTop="@dimen/spacing_30"
            android:text="Let us know feedback"
            android:textColor="@color/dark_gray"
            android:textStyle="bold" />


        <EditText
            android:id="@+id/input_password"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_marginLeft="25dp"
            android:layout_marginRight="25dp"
            android:layout_marginTop="@dimen/spacing_10"
            android:background="@drawable/bg_edit_text_rect"
            android:drawablePadding="4dp"
            android:gravity="left"
            android:hint="Enter Feedback"
            android:inputType="textMultiLine"
            android:maxLength="200"
            android:padding="@dimen/spacing_10"
            android:paddingRight="@dimen/spacing_10"
            android:textColor="@color/black"
            android:textSize="16sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="25dp"
            android:layout_marginRight="25dp"
            android:layout_marginTop="@dimen/spacing_16"
            android:orientation="horizontal">


            <EditText
                android:id="@+id/et_mobile_number"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:drawableLeft="@drawable/ic_email"
                android:drawablePadding="4dp"
                android:hint="Mobile Number"
                android:inputType="number"
                android:paddingRight="@dimen/spacing_10"
                android:textColor="@color/black"
                android:textSize="16sp"
                android:visibility="gone" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="25dp"
            android:layout_marginRight="25dp"
            android:layout_marginTop="@dimen/spacing_16"
            android:orientation="horizontal"
            android:visibility="gone">


            <EditText
                android:id="@+id/input_email"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:drawableLeft="@drawable/ic_email"
                android:drawablePadding="4dp"
                android:hint="Email address"
                android:inputType="textEmailAddress"
                android:paddingRight="@dimen/spacing_10"
                android:textColor="@color/black"
                android:textSize="16sp" />
        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="25dp"
            android:layout_marginRight="25dp"
            android:layout_marginTop="@dimen/spacing_20dp"
            android:text="How may we get in touch with you?(Email or Phone)"
            android:textColor="@color/dark_gray"
            android:textStyle="bold" />


        <EditText
            android:id="@+id/et_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="25dp"
            android:layout_marginRight="25dp"
            android:layout_marginTop="@dimen/spacing_10"
            android:background="@drawable/bg_edit_text_rect"
            android:drawablePadding="4dp"
            android:ems="10"
            android:gravity="left"
            android:hint="Enter Email or Phone"
            android:inputType="textMultiLine"
            android:maxLength="40"
            android:padding="@dimen/spacing_10"
            android:paddingRight="@dimen/spacing_10"
            android:textColor="@color/black"
            android:textSize="16sp" />


        <android.support.v7.widget.AppCompatButton
            android:id="@+id/btn_sign_in"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="25dp"
            android:layout_marginRight="25dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/bg_btn_common"
            android:padding="12dp"
            android:text="Submit"
            android:textAllCaps="true"
            android:textColor="@color/white"
            android:textSize="@dimen/spacing_15" />

        <android.support.v7.widget.AppCompatButton
            android:id="@+id/btn_face_book_login"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="25dp"
            android:layout_marginRight="25dp"
            android:layout_marginTop="5dp"
            android:background="@color/purple_trans"
            android:padding="12dp"
            android:text="Facebook Sign Up"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="@dimen/spacing_15"
            android:visibility="gone" />


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginLeft="25dp"
            android:layout_marginRight="25dp"
            android:layout_marginTop="10dp"
            android:orientation="horizontal"
            android:visibility="gone">

            <TextView
                android:id="@+id/link_signup"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Forgot Password?"
                android:textColor="@color/dark_gray"
                android:textSize="14dip" />

            <View
                android:id="@+id/view"
                android:layout_width="1dip"
                android:layout_height="match_parent"
                android:background="@color/dark_gray"
                android:visibility="visible" />

            <TextView
                android:id="@+id/tv_signup"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:gravity="center"
                android:text="New here?Sign up"
                android:textColor="@color/dark_gray"
                android:textSize="14sp"
                android:visibility="visible" />


        </LinearLayout>


    </LinearLayout>

</ScrollView>