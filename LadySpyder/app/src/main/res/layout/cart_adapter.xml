<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <android.support.v7.widget.CardView
        android:id="@+id/card_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="0.3dp"
        android:elevation="1dp"
        android:padding="4dp"
        card_view:cardCornerRadius="4dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">


            <ImageView
                android:id="@+id/profile_image"
                android:layout_width="100dp"
                android:layout_height="120dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:background="@drawable/ic_product_image1"
                android:padding="5dp"
                android:scaleType="fitXY" />

            <TextView
                android:id="@+id/tv_offer_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="@dimen/spacing_3"
                android:layout_toEndOf="@+id/profile_image"
                android:layout_toRightOf="@+id/profile_image"
                android:background="@color/color_orange"
                android:padding="@dimen/spacing_3"
                android:text="30 % Off"
                android:textColor="@color/dark_gray"
                android:textSize="14sp"
                android:textStyle="bold"
                android:visibility="visible" />

            <TextView
                android:id="@+id/tv_vechicle_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_offer_value"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:layout_toEndOf="@+id/profile_image"
                android:layout_toRightOf="@+id/profile_image"
                android:text="Dried Fruits Jar"
                android:textColor="@color/dark_gray"
                android:textSize="14sp"
                android:textStyle="bold"
                android:visibility="visible" />


            <TextView
                android:id="@+id/tv_reg_no"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_vechicle_name"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="5dp"
                android:layout_toRightOf="@+id/profile_image"
                android:text="OMR 0.134"
                android:textColor="@color/gray"
                android:textSize="14sp"
                android:visibility="gone" />

            <TextView
                android:id="@+id/tv_tenant_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_reg_no"
                android:layout_marginBottom="5dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="5dp"
                android:layout_toRightOf="@+id/profile_image"
                android:text="Rs 0.134"
                android:textColor="@color/dark_gray"
                android:textSize="14sp"
                android:textStyle="bold"
                android:visibility="visible" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginLeft="@dimen/spacing_10"
                android:layout_marginTop="80sp"
                android:layout_toRightOf="@id/tv_reg_no"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/btn_minus"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_gravity="end|bottom"
                    android:layout_marginLeft="10dp"
                    android:background="@drawable/ic_btn_minus"
                    android:text="-"
                    android:textColor="@color/white" />

                <TextView
                    android:id="@+id/tv_quantity"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/spacing_5"
                    android:layout_marginTop="5dp"
                    android:hint="1"
                    android:inputType="text"
                    android:singleLine="true"
                    android:textColor="@color/colorPrimary"
                    android:textSize="16dp"
                    android:textStyle="bold" />

                <Button
                    android:id="@+id/btn_plus"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_gravity="end|bottom"
                    android:layout_marginLeft="10dp"
                    android:background="@drawable/ic_btn_plus"
                    android:src="@android:drawable/ic_input_add"
                    android:text="+"
                    android:textColor="@color/white" />
            </LinearLayout>

            <TextView
                android:id="@+id/tv_name_value"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_alignParentRight="true"
                android:layout_marginRight="@dimen/spacing_10"
                android:layout_marginTop="45dp"
                android:background="@drawable/ic_delete"
                android:text=">"
                android:textColor="@color/gray"
                android:textSize="14sp" />

        </RelativeLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>