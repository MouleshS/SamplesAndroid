<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <android.support.v7.widget.CardView
        android:id="@+id/card_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:elevation="1dp"
        card_view:cardCornerRadius="4dp">

        <RelativeLayout
            android:id="@+id/rl_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">


            <ImageView
                android:id="@+id/profile_image"
                android:layout_width="120dp"
                android:layout_height="124dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:background="@drawable/ic_product_image1"
                android:padding="5dp"
                android:scaleType="fitXY" />


            <TextView
                android:id="@+id/tv_product_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="@dimen/spacing_10"
                android:layout_toRightOf="@+id/profile_image"
                android:text="OMR 0.134"
                android:textColor="@color/gray"
                android:textSize="14sp"
                android:textStyle="bold"
                android:visibility="visible" />

            <TextView
                android:id="@+id/tv_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_product_name"
                android:layout_marginBottom="15dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="@dimen/spacing_5"
                android:layout_toRightOf="@+id/profile_image"
                android:text="Rs.683.41"
                android:textColor="@color/dark_gray"
                android:textSize="14sp"
                android:textStyle="bold"
                android:visibility="visible" />


            <TextView
                android:id="@+id/tv_shipping"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_price"
                android:layout_marginBottom="5dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="@dimen/spacing_5"
                android:layout_toRightOf="@+id/profile_image"
                android:text="Free Shipping"
                android:textColor="@color/gray"
                android:textSize="14sp"
                android:textStyle="bold"
                android:visibility="visible" />


            <TextView
                android:id="@+id/tv_rating"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_shipping"
                android:layout_marginBottom="15dp"
                android:layout_marginLeft="10dp"
                android:layout_toRightOf="@+id/profile_image"
                android:text="5.0"
                android:textColor="@color/gray"
                android:textSize="14sp"
                android:textStyle="bold"
                android:visibility="visible" />

            <RatingBar
                android:id="@+id/ratingbar"
                style="?android:attr/ratingBarStyleSmall"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_shipping"
                android:layout_toEndOf="@+id/tv_rating"
                android:layout_toRightOf="@+id/tv_rating"
                android:isIndicator="true"
                android:numStars="5" />


            <TextView
                android:id="@+id/tv_orders"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_below="@+id/tv_shipping"
                android:layout_marginBottom="15dp"
                android:layout_marginRight="10dp"
                android:text="10 orders"
                android:textColor="@color/gray"
                android:textSize="14sp"
                android:textStyle="bold"
                android:visibility="visible" />


        </RelativeLayout>


    </android.support.v7.widget.CardView>

</LinearLayout>